<div class="page-header">
  <h1> <%= @company.name %> </h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @company.name %></dd>
  <dt>Suffix</dt>
  <dd><%= @company.suffix %></dd>
  <dt>Catch Phrase</dt>
  <dd><%= @company.catch_phrase %></dd>
  <dt>Email</dt>
  <dd><%= @company.email %></dd>
  <dt>Start Date</dt>
  <dd><%= @company.start_date %></dd>
  <dt>Industry</dt>
  <dd><%= @company.industry %></dd><br/>
  <dt>Locations: </dt>
  <% @locations.each do |location| %>
    <dd><%= link_to location.city, company_location_path(@company, location) %></dd>
  <% end %>
  <br/>
  <dt>Products: </dt>
  <% @products.each do |product| %>
  <dd><%= link_to product.name, company_product_path(@company, product) %></dd>
  <% end %>
</dl>
